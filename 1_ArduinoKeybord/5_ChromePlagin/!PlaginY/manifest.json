{
  "manifest_version": 3,
  "name": "Multi-Block Text Copier",
  "version": "1.0",
  "description": "Копирует текст из нескольких блоков одновременно",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_title": "Скопировать блоки кода"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
      /*"run_at": "document_end"*/
    }
  ],
  "commands": {
    "copy_blocks_hotkey": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Копировать блоки (горячая клавиша)"
    }
  }
}
{
  "manifest_version": 3,
  "name": "Block Selector",
  "version": "1.0",
  "description": "Плагин для выбора и копирования блоков на странице",
  "permissions": ["activeTab", "scripting", "clipboardWrite", "clipboardRead"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Выбрать блок"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}